<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/view" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:background="@drawable/bg_0">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="300dp"
                android:gravity="center_horizontal"
                android:hint="@string/type_name"
                android:textColorHint="#000000"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:id="@+id/name"

                />
        </RelativeLayout>

        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_1">

            <TextView
                style="@style/questions"
                android:text="@string/capital" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q1_g">

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="150dp"
                    android:text="@string/cracow"
                    android:id="@+id/q1a1"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/warsaw"
                    android:id="@+id/q1a2"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/wroclaw"
                    android:id="@+id/q1a3"/>

            </RadioGroup>

        </RelativeLayout>

        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_2">

            <TextView
                style="@style/questions"
                android:text="@string/border" />

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="150dp"
                android:text="@string/germany"
                android:id="@+id/q2a1"/>

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="200dp"
                android:text="@string/lithuania"
                android:id="@+id/q2a2"/>

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="250dp"
                android:text="@string/hungary"
                android:id="@+id/q2a3"/>

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="300dp"
                android:text="@string/russia"
                android:id="@+id/q2a4"/>

        </RelativeLayout>

        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_3">

            <TextView
                style="@style/questions"
                android:text="@string/history" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q3_g">

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="150dp"
                    android:text="@string/turkey"
                    android:id="@+id/q3a1"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/sweden"
                    android:id="@+id/q3a2"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/romania"
                    android:id="@+id/q3a3"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/serbia"
                    android:id="@+id/q3a4"/>

            </RadioGroup>

        </RelativeLayout>

        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_4">

            <TextView
                style="@style/questions"
                android:text="@string/area" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q4_g">

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="150dp"
                    android:text="@string/_1"
                    android:id="@+id/q4a1" />

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/_9"
                    android:id="@+id/q4a2"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/_15"
                    android:id="@+id/q4a3"/>

            </RadioGroup>

        </RelativeLayout>


        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_5">

            <TextView
                style="@style/questions"
                android:text="@string/uprising" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q5_g">

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="150dp"
                    android:text="@string/_1939"
                    android:id="@+id/q5a1"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/_1943"
                    android:id="@+id/q5a2"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/_1944"
                    android:id="@+id/q5a3"/>

            </RadioGroup>

        </RelativeLayout>


        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_6">

            <TextView
                style="@style/questions"
                android:text="@string/poland" />

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="150dp"
                android:text="@string/desert"
                android:id="@+id/q6a1"/>

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="200dp"
                android:text="@string/sea"
                android:id="@+id/q6a2"/>

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="250dp"
                android:text="@string/mountains"
                android:id="@+id/q6a3"/>

            <CheckBox
                style="@style/checkbox"
                android:layout_marginTop="300dp"
                android:text="@string/lakes"
                android:id="@+id/q6a4"/>

        </RelativeLayout>

        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_7">

            <TextView
                style="@style/questions"
                android:text="@string/constitution"
                 />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q7_g">

            <RadioButton
                style="@style/radio"
                android:layout_marginTop="150dp"
                android:text="@string/yes"
                android:id="@+id/q7a1"/>

            <RadioButton
                style="@style/radio"
                android:layout_marginTop="30dp"
                android:text="@string/no"
                android:id="@+id/q7a2"/>

            </RadioGroup>


        </RelativeLayout>

        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="380dp"
            android:background="@drawable/bg_8">

            <TextView
                style="@style/questions"
                android:text="@string/football" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/q8_g">

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="150dp"
                    android:text="@string/wisla"
                    android:id="@+id/q8a1"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/arka"
                    android:id="@+id/q8a2"/>

                <RadioButton
                    style="@style/radio"
                    android:layout_marginTop="30dp"
                    android:text="@string/legia"
                    android:id="@+id/q8a3"/>

            </RadioGroup>

        </RelativeLayout>


        <View
            style="@style/view" />

        <RelativeLayout
            android:layout_width="598dp"
            android:layout_height="90dp"
            android:background="#ba2c2a">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="25dp"
                android:text="@string/submit"
                android:textSize="20sp"
                android:id="@+id/submit"
                android:onClick="submit"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>